{% set type = block.headingType %}

{% switch type %}
	{% case "h1" %}
		{% set class = 'text-6xl' %}
	{% case "h2" %}
		{% set class = 'text-3xl md:text-5xl' %}
	{% case "h3" %}
		{% set class = 'text-2xl md:text-4xl' %}
	{% case "h4" %}
		{% set class = 'text-xl md:text-3xl' %}
	{% default %}
		{% set class = 'text-xl md:text-3xl' %}
{% endswitch %}

<{{type}} class="max-w-2xl mx-auto my-[0.6em] first:mt-0 font-serif font-medium {{class}}">{{block.headingContent}}</{{type}}>

